<!DOCTYPE html>
<html lang="lv">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Misty Dungeon</title>
</head>
<body>
  <h1>Misty Dungeon Veikals</h1>

  <h2>Produkti</h2>
  <div>
    <% products.forEach(p => { %>
      <div>
        <h3><%= p.name %></h3>
        <p>Cena: <%= p.price %>€</p>
        <form action="/add-to-cart" method="post">
          <input type="hidden" name="productId" value="<%= p._id %>">
          <button type="submit">Pievienot grozam</button>
        </form>
      </div>
    <% }) %>
  </div>

  <hr>

  <h2>Grozs</h2>
  <% if (cart.length === 0) { %>
    <p>Grozs ir tukšs</p>
  <% } else { %>
    <ul>
      <% cart.forEach(c => { %>
        <li>
          <%= c.name %> - <%= c.price %>€
          <form action="/remove-from-cart" method="post" style="display:inline;">
            <input type="hidden" name="productId" value="<%= c.id %>">
            <button type="submit">Noņemt</button>
          </form>
        </li>
      <% }) %>
    </ul>
    <form action="/pay" method="post">
      <button type="submit">Pirkt visu grozu</button>
    </form>
  <% } %>
</body>
</html>
